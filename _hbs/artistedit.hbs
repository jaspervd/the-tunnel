<form method="post" action="">
	<p>
		<label for="username">Gebruikersnaam</label>
		<input type="text" name="username" id="username" value="{{username}}" />
	</p>
	<p>
		<label for="email">E-mailadres</label>
		<input type="email" name="email" id="email" value="{{email}}" />
	</p>
	<p>
		<label for="password">Wachtwoord</label>
		<input type="password" name="password" id="password" />
	</p>
	<p>
		<label for="password_confirm">Wachtwoord herhalen</label>
		<input type="password" name="password_confirm" id="password_confirm" />
	</p>
	<p>
		<label for="firstname">Voornaam</label>
		<input type="text" name="firstname" id="firstname" value="{{firstname}}" />
	</p>
	<p>
		<label for="lastname">Achternaam</label>
		<input type="text" name="lastname" id="lastname" value="{{lastname}}" />
	</p>
	<p>
		<label for="country">Land</label>
    <select class="form-control bfh-countries" name="country" id="country" data-country="{{country}}"></select>
	<p>
		<label for="bio">Bio</label>
		<textarea name="bio" id="bio">{{bio}}</textarea>
	</p>
	<p>
		<input type="submit" value="Bewerken" />
		<a href="#artists/{{id}}">Annuleren</a>
	</p>
</form>
